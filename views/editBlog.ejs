<%include ./partials/adminNav%>

<div align="center">
  <div class="col-md-6">
    <form action="/blog/<%=blog._id%>?_method=PUT" method="POST">
      <div
        id="contact-form"
        class="form-container"
        data-form-container
        style="color: rgb(0, 0, 0); background: #ef6b5746;"
      >
        <div class="row-lg-8">
          <div class="form-title">
            <span> Create Blog Post </span>
          </div>
        </div>
        <div class="file-upload">
          <button
            class="file-upload-btn"
            type="button"
            onclick="$('.file-upload-input').trigger( 'click' )"
          >
            Add Image
          </button>

          <div class="">
            <input
              class="file-upload-input"
              type="file"
              name="image"
              onchange="readURL(this);"
              accept="image/*"
              value="/<%=blog.image%>"
            />
          </div>
          <div class="file-upload-content">
            <img
              class="file-upload-image"
              src="/<%=blog.image%>"
              alt="your image"
            />
            <div class="image-title-wrap">
              <button
                type="button"
                onclick="removeUpload()"
                class="remove-image"
              >
                Remove <span class="image-title">Uploaded Image</span>
              </button>
            </div>
          </div>
        </div>
        <div class="input-container" style="width:85%">
          <div class="row">
            <span class="req-input valid">
              <span
                class="input-status"
                data-toggle="tooltip"
                data-placement="top"
                title="Input your post title."
              >
              </span>
              <input
                required
                autocomplete="off"
                type="text"
                data-min-length="8"
                name="title"
                value="<%=blog.title%>"
                placeholder="Post Title"
              />
            </span>
          </div>

          <div class="row">
            <span class="req-input message-box valid">
              <span
                class="input-status"
                data-toggle="tooltip"
                data-placement="top"
                title="Post Contents."
              >
              </span>
              <div class="form-group">
                <textarea
                  class="form-control"
                  name="body"
                  placeholder="Type post description here..."
                  id="exampleFormControlTextarea1"
                  rows="18"
                >
<%=blog.body%></textarea
                >
              </div>
            </span>
          </div>
          <div class="row submit-row">
            <button type="submit" class="btn btn-block submit-form valid">
              Update Post
            </button>
          </div>
        </div>
      </div>
    </form>
  </div>
</div>
