<div class="site-wrap">
    <% include ./partials/nav %>
    <div class="site-blocks-cover inner-page-cover" style="background-image: url(images/new/blog.jpg);" data-aos="fade" data-stellar-background-ratio="0.5">
        <div class="container">
          <div class="row align-items-center justify-content-center text-center">

            <div class="col-md-8" data-aos="fade-up" data-aos-delay="400">
              <h1 class="text-white font-weight-light">Blog Posts</h1>              
            </div>
          </div>
        </div>
      </div>  
  
    <div class="site-section">
      <div class="container">
        
        <div class="row mb-3 align-items-stretch">
<%data.reverse().map(item=>{ %>
          <div class="col-md-6 col-lg-6 mb-4 mb-lg-4">
            <div class="h-entry">
              <img src="<%=item.image%>" alt="Image" class="img-fluid">
              <div class="meta mb-4"> <span class="mx-2">&bullet;</span> <%=item.date%> </div>
              <h2 class="font-size-regular"><a href="#"><%=item.title%></a></h2>
              <p><%=item.body%></p>
            </div> 
          </div>
<%})%>
        </div>
        <div class="row">
          <div class="col-12 text-center">
            <a href="#" class="btn btn-outline-primary border-2 py-3 px-5">Load More Posts...</a>
          </div>
        </div>
      </div>
    </div>
    <% include ./partials/footer %>
</div>