<%include ./partials/adminNav%>

<div
  class="site-blocks-cover inner-page-cover"
  style="background-image: url(/images/new/blog.jpg);"
  data-aos="fade"
  data-stellar-background-ratio="0.5"
>
  <div class="container">
    <div class="row align-items-center justify-content-center text-center">
      <div class="col-md-8" data-aos="fade-up" data-aos-delay="400">
        <h1 class="text-white font-weight-light">Blog Posts</h1>
      </div>
    </div>
  </div>
</div>

<div class="site-section">
  <div class="container">
    <div class="row mb-3 align-items-stretch">
      <%data.reverse().map(item=>{ %>

      <div class="col-md-6 col-lg-6 mb-4 mb-lg-4">
        <div class="card mt-4">
          <img class="card-img-top img-fluid" src="/<%=item.image%>" alt="" />
          <div class="card-body">
            <h3 class="card-title"><%=item.title%></h3>
            <p class="card-text"><%=item.body%></p>
            <div class="row" align="center">
              <div class="col-md">
                <form action="/blog/<%=item._id%>?_method=DELETE" method="POST">
                  <input
                    style="display:none"
                    name="image"
                    value="<%=item.image%>"
                  />
                  <button
                    style="color:rgba(234, 24, 24, 0.913)"
                    class="btn"
                    type="submit"
                  >
                    Delete
                  </button>
                </form>
              </div>
              <div class="col-md">
                <a href="/admin/blog/<%=item._id%>"
                  ><button style="color:rgba(10, 204, 248, 0.913)" class="btn">
                    Edit
                  </button></a
                >
              </div>
            </div>
          </div>
        </div>
      </div>

      <%})%>
    </div>
  </div>
</div>
<% include ./partials/footer %>
